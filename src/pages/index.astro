---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

const pageTitle = 'Kent Schaeffer | Web Developer & Technical Writer';
const pageDescription = 'Experienced web developer and technical writer specializing in documentation, DDI systems, and full-stack development.';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={pageDescription} />
  <title>{pageTitle}</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
</head>
<body>
  <Header currentPath="/" />
  
  <main>
    <section id="cover" class="hero-section">
      <div class="container">
        <div class="hero-content">
          <div class="hero-text">
            <h1 class="hero-title">
              Building Technical Excellence<br />
              <span class="hero-title-accent">One Line at a Time</span>
            </h1>
            <p class="hero-description">
              Over 20 years of experience crafting documentation, architecting systems, 
              and developing applications that solve real-world problems. Specializing in 
              technical writing, DDI infrastructure, and full-stack development.
            </p>
            <div class="hero-actions">
              <a href="/docs" class="btn btn--primary">
                Explore Documentation
              </a>
              <a href="/portfolio" class="btn btn--secondary">
                View Portfolio
              </a>
            </div>
          </div>
          <div class="hero-visual">
            <div class="hero-badge">
              <div class="badge-content">
                <span class="badge-number">20+</span>
                <span class="badge-label">Years Experience</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <section class="expertise-section section section--alt">
      <div class="container">
        <h2 class="section-title text-center">Core Expertise</h2>
        <div class="expertise-grid">
          <div class="expertise-card">
            <div class="expertise-icon">üìù</div>
            <h3 class="expertise-title">Technical Writing</h3>
            <p class="expertise-description">
              Process documentation, standards, diagrams, and API references using 
              Markdown, docs-as-code, Confluence, and modern documentation tools.
            </p>
          </div>
          
          <div class="expertise-card">
            <div class="expertise-icon">üåê</div>
            <h3 class="expertise-title">DDI Systems</h3>
            <p class="expertise-description">
              DNS BIND, Infoblox, and IPAM environments on Unix systems. Domain 
              registration and DNS record management through automated workflows.
            </p>
          </div>
          
          <div class="expertise-card">
            <div class="expertise-icon">üíª</div>
            <h3 class="expertise-title">Full-Stack Development</h3>
            <p class="expertise-description">
              Frontend with HTML, CSS, JavaScript. Backend with Perl and Node.js. 
              Database administration across MySQL, MongoDB, and Oracle.
            </p>
          </div>
          
          <div class="expertise-card">
            <div class="expertise-icon">‚öôÔ∏è</div>
            <h3 class="expertise-title">Systems Architecture</h3>
            <p class="expertise-description">
              DevOps practices, application support, and system architecture on 
              Linux/Unix platforms. Bash, shell, and Perl scripting expertise.
            </p>
          </div>
        </div>
      </div>
    </section>
    
    <section class="cta-section section">
      <div class="container">
        <div class="cta-content">
          <h2 class="cta-title">Ready to Collaborate?</h2>
          <p class="cta-description">
            Looking for a technical writer or developer who understands both code and 
            documentation? Let's discuss how I can contribute to your project.
          </p>
          <a href="/contact" class="btn btn--primary btn--lg">
            Get in Touch
          </a>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</body>
</html>

<style>
  /* Hero Section */
  .hero-section {
    padding: var(--space-3xl) 0;
    min-height: calc(100vh - var(--header-height));
    display: flex;
    align-items: center;
    background: linear-gradient(
      135deg,
      var(--color-background) 0%,
      var(--color-background-alt) 100%
    );
  }
  
  .hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-3xl);
    align-items: center;
  }
  
  .hero-text {
    max-width: 600px;
  }
  
  .hero-title {
    font-size: var(--font-size-4xl);
    line-height: 1.2;
    margin-bottom: var(--space-lg);
    color: var(--color-primary);
  }
  
  .hero-title-accent {
    color: var(--color-secondary);
    display: block;
  }
  
  .hero-description {
    font-size: var(--font-size-lg);
    line-height: var(--line-height-relaxed);
    color: var(--color-text-light);
    margin-bottom: var(--space-xl);
  }
  
  .hero-actions {
    display: flex;
    gap: var(--space-md);
    flex-wrap: wrap;
  }
  
  .hero-visual {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .hero-badge {
    width: 280px;
    height: 280px;
    border-radius: 50%;
    background: linear-gradient(
      135deg,
      var(--color-secondary) 0%,
      var(--color-secondary-dark) 100%
    );
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: var(--shadow-lg);
    position: relative;
    animation: float 3s ease-in-out infinite;
  }
  
  .hero-badge::before {
    content: '';
    position: absolute;
    inset: -10px;
    border-radius: 50%;
    background: linear-gradient(
      135deg,
      var(--color-secondary-light),
      var(--color-secondary)
    );
    opacity: 0.3;
    animation: pulse 2s ease-in-out infinite;
  }
  
  .badge-content {
    text-align: center;
    color: white;
    z-index: 1;
  }
  
  .badge-number {
    display: block;
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    margin-bottom: var(--space-sm);
  }
  
  .badge-label {
    display: block;
    font-size: var(--font-size-lg);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  @keyframes float {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-20px);
    }
  }
  
  @keyframes pulse {
    0%, 100% {
      transform: scale(1);
      opacity: 0.3;
    }
    50% {
      transform: scale(1.1);
      opacity: 0.2;
    }
  }
  
  /* Buttons */
  .btn {
    display: inline-block;
    padding: var(--space-sm) var(--space-lg);
    font-size: var(--font-size-base);
    font-weight: 600;
    text-align: center;
    text-decoration: none;
    border-radius: var(--radius-md);
    transition: all var(--transition-fast);
    cursor: pointer;
    border: 2px solid transparent;
  }
  
  .btn--primary {
    background-color: var(--color-secondary);
    color: white;
  }
  
  .btn--primary:hover,
  .btn--primary:focus {
    background-color: var(--color-secondary-dark);
    text-decoration: none;
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }
  
  .btn--secondary {
    background-color: transparent;
    color: var(--color-secondary);
    border-color: var(--color-secondary);
  }
  
  .btn--secondary:hover,
  .btn--secondary:focus {
    background-color: var(--color-secondary);
    color: white;
    text-decoration: none;
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }
  
  .btn--lg {
    padding: var(--space-md) var(--space-2xl);
    font-size: var(--font-size-lg);
  }
  
  /* Expertise Section */
  .expertise-section {
    padding: var(--space-3xl) 0;
  }
  
  .section-title {
    font-size: var(--font-size-3xl);
    margin-bottom: var(--space-2xl);
  }
  
  .expertise-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-xl);
  }
  
  .expertise-card {
    background-color: var(--color-background);
    padding: var(--space-xl);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
    transition: all var(--transition-base);
  }
  
  .expertise-card:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-4px);
  }
  
  .expertise-icon {
    font-size: 3rem;
    margin-bottom: var(--space-md);
  }
  
  .expertise-title {
    font-size: var(--font-size-xl);
    margin-bottom: var(--space-md);
    color: var(--color-primary);
  }
  
  .expertise-description {
    font-size: var(--font-size-base);
    line-height: var(--line-height-relaxed);
    color: var(--color-text-light);
    margin: 0;
  }
  
  /* CTA Section */
  .cta-section {
    padding: var(--space-3xl) 0;
  }
  
  .cta-content {
    max-width: 700px;
    margin: 0 auto;
    text-align: center;
    padding: var(--space-3xl) var(--space-2xl);
    background: linear-gradient(
      135deg,
      var(--color-primary-dark) 0%,
      var(--color-primary) 100%
    );
    border-radius: var(--radius-lg);
    color: white;
    box-shadow: var(--shadow-lg);
  }
  
  .cta-title {
    font-size: var(--font-size-3xl);
    color: white;
    margin-bottom: var(--space-md);
  }
  
  .cta-description {
    font-size: var(--font-size-lg);
    line-height: var(--line-height-relaxed);
    margin-bottom: var(--space-xl);
    color: var(--color-surface);
  }
  
  /* Responsive Design */
  @media (max-width: 1024px) {
    .hero-content {
      grid-template-columns: 1fr;
      text-align: center;
    }
    
    .hero-text {
      max-width: 100%;
    }
    
    .hero-actions {
      justify-content: center;
    }
    
    .hero-badge {
      width: 240px;
      height: 240px;
    }
    
    .badge-number {
      font-size: 3rem;
    }
  }
  
  @media (max-width: 768px) {
    .hero-section {
      min-height: auto;
      padding: var(--space-2xl) 0;
    }
    
    .hero-title {
      font-size: var(--font-size-3xl);
    }
    
    .hero-description {
      font-size: var(--font-size-base);
    }
    
    .hero-badge {
      width: 200px;
      height: 200px;
    }
    
    .badge-number {
      font-size: 2.5rem;
    }
    
    .badge-label {
      font-size: var(--font-size-base);
    }
    
    .expertise-grid {
      grid-template-columns: 1fr;
    }
    
    .cta-content {
      padding: var(--space-2xl) var(--space-lg);
    }
    
    .cta-title {
      font-size: var(--font-size-2xl);
    }
  }
</style>