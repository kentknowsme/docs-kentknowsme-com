---
interface Props {
  currentPath?: string;
}

const { currentPath = '/' } = Astro.props;

const navItems = [
  { href: '/', label: 'Home', sectionId: 'cover' },
  { href: '/portfolio', label: 'Portfolio', sectionId: 'portfolio' },
  { href: '/docs', label: 'Documentation', sectionId: null },
  { href: '/about', label: 'About', sectionId: 'about' },
  { href: '/contact', label: 'Contact', sectionId: 'contact' }
];

const isActive = (path: string) => currentPath === path;
---

<header class="site-header" id="main-header">
  <div class="container">
    <div class="header-content">
      <div class="header-branding">
        <a href="/" class="logo-link">
          <span class="logo-text">Kent Schaeffer</span>
        </a>
      </div>
      
      <button 
        class="mobile-nav-toggle" 
        aria-label="Toggle navigation menu"
        aria-expanded="false"
        type="button"
        id="nav-toggle"
      >
        <span class="hamburger-line"></span>
        <span class="hamburger-line"></span>
        <span class="hamburger-line"></span>
      </button>
      
      <nav class="primary-nav" aria-label="Primary navigation" id="primary-nav">
        <ul class="nav-list">
          {navItems.map(item => (
            <li class="nav-item">
              <a 
                href={item.href} 
                class={`nav-link ${isActive(item.href) ? 'nav-link--active' : ''}`}
                data-section={item.sectionId}
                aria-current={isActive(item.href) ? 'page' : undefined}
              >
                {item.label}
              </a>
            </li>
          ))}
        </ul>
        
        <div class="color-mode-switch">
          <div class="mode-selector">
            <button class="mode-button active" data-mode="dark" aria-label="Dark mode" title="Dark mode">
              <i class="fa fa-moon-o" aria-hidden="true"></i>
            </button>
            <button class="mode-button" data-mode="light" aria-label="Light mode" title="Light mode">
              <i class="fa fa-sun-o" aria-hidden="true"></i>
            </button>
            <button class="mode-button" data-mode="mono" aria-label="Monochrome mode" title="Monochrome mode">
              <i class="fa fa-adjust" aria-hidden="true"></i>
            </button>
          </div>
          <div class="mode-labels">
            <span class="mode-label">Dark</span>
            <span class="mode-label">Light</span>
            <span class="mode-label">Mono</span>
          </div>
        </div>
      </nav>
    </div>
  </div>
</header>

<style>
  .site-header {
    position: sticky;
    top: 0;
    z-index: 1000;
    background-color: rgba(15, 25, 35, 0.15);
    backdrop-filter: blur(5px);
    border-bottom: 1px solid var(--color-border);
    box-shadow: var(--shadow-sm);
    height: var(--header-height);
    display: flex;
    align-items: center;
    transition: background-color 0.3s ease;
  }
  
  .site-header.scrolled {
    background-color: rgba(15, 25, 35, 0.65);
    backdrop-filter: blur(10px);
  }
  
  .header-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
  }
  
  .header-branding {
    flex-shrink: 0;
  }
  
  .logo-link {
    display: block;
    color: var(--color-primary);
    font-weight: 700;
    font-size: var(--font-size-xl);
    text-decoration: none;
    transition: color var(--transition-fast);
  }
  
  .logo-link:hover {
    color: var(--color-accent);
    text-decoration: none;
  }
  
  .logo-text {
    display: inline-block;
  }
  
  .mobile-nav-toggle {
    display: none;
    flex-direction: column;
    justify-content: space-around;
    width: 2rem;
    height: 2rem;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0;
    z-index: 1001;
  }
  
  .mobile-nav-toggle:focus-visible {
    outline: 2px solid var(--color-secondary);
    outline-offset: 2px;
  }
  
  .hamburger-line {
    width: 2rem;
    height: 0.25rem;
    background-color: var(--color-primary);
    border-radius: 2px;
    transition: all var(--transition-base);
    transform-origin: 1px;
  }
  
  .mobile-nav-toggle[aria-expanded="true"] .hamburger-line:nth-child(1) {
    transform: rotate(45deg);
  }
  
  .mobile-nav-toggle[aria-expanded="true"] .hamburger-line:nth-child(2) {
    opacity: 0;
    transform: translateX(20px);
  }
  
  .mobile-nav-toggle[aria-expanded="true"] .hamburger-line:nth-child(3) {
    transform: rotate(-45deg);
  }
  
  .primary-nav {
    flex-grow: 1;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    gap: var(--space-xl);
  }
  
  .nav-list {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: var(--space-md);
    align-items: center;
  }
  
  .nav-item {
    margin: 0;
  }
  
  .nav-link {
    display: block;
    padding: var(--space-sm) var(--space-md);
    color: var(--color-text);
    font-weight: 500;
    text-decoration: none;
    border-radius: var(--radius-md);
    transition: all var(--transition-fast);
    position: relative;
  }
  
  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 2px;
    background-color: var(--color-secondary);
    transition: width var(--transition-fast);
  }
  
  .nav-link:hover,
  .nav-link:focus {
    color: var(--color-accent) !important;
    outline: 2px solid var(--color-accent);
    outline-offset: 4px;
  }
  
  .nav-link:hover::after,
  .nav-link:focus::after {
    width: 80%;
  }
  
  .nav-link--active {
    color: var(--color-primary);
    font-weight: 600;
  }
  
  .nav-link--active::after {
    width: 80%;
  }
  
  /* Color Mode Switch */
  .color-mode-switch {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    padding-left: var(--space-lg);
    border-left: 2px solid rgba(255, 255, 255, 0.2);
  }
  
  .mode-selector {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .mode-button {
    background: rgba(255, 255, 255, 0.15);
    border: 2px solid var(--color-primary);
    border-radius: 8px;
    padding: 0.5rem;
    cursor: pointer;
    transition: all 0.3s ease;
    color: rgba(255, 255, 255, 0.9);
    font-size: 1.2rem;
    width: 45px;
    height: 45px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .mode-button.active {
    background: var(--color-primary);
    border-color: var(--color-primary);
    color: var(--color-background);
  }
  
  .mode-button:hover,
  .mode-button:focus {
    border-color: var(--color-accent);
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
  }
  
  .mode-labels {
    display: flex;
    gap: 0.5rem;
    font-size: 0.7rem;
    text-align: center;
  }
  
  .mode-label {
    width: 45px;
    color: rgba(255, 255, 255, 0.6);
  }
  
  /* Light Mode Adjustments */
  body.light-mode .site-header {
    background-color: rgba(245, 245, 245, 0.15);
  }
  
  body.light-mode .site-header.scrolled {
    background-color: rgba(245, 245, 245, 0.65);
  }
  
  body.light-mode .mode-button {
    background: rgba(255, 255, 255, 0.25);
    color: var(--color-primary);
  }
  
  body.light-mode .mode-button.active {
    background: var(--color-primary);
    color: var(--color-background);
    border-color: var(--color-primary);
  }
  
  body.light-mode .mode-label {
    color: #555555;
  }
  
  /* Monochrome Mode Adjustments */
  body.mono-mode .site-header {
    background-color: rgba(26, 26, 26, 0.35);
  }
  
  body.mono-mode .site-header.scrolled {
    background-color: rgba(26, 26, 26, 0.65);
  }
  
  body.mono-mode .nav-link--active {
    color: #cccccc !important;
  }
  
  body.mono-mode .nav-link--active::after {
    background: #cccccc;
  }
  
  body.mono-mode .mode-button {
    border-color: #aaaaaa;
  }
  
  body.mono-mode .mode-button.active {
    background: #aaaaaa;
  }
  
  @media (max-width: 768px) {
    .mobile-nav-toggle {
      display: flex;
    }
    
    .primary-nav {
      position: fixed;
      top: var(--header-height);
      right: 0;
      bottom: 0;
      width: 70%;
      max-width: 300px;
      background-color: var(--color-background);
      border-left: 1px solid var(--color-border);
      box-shadow: var(--shadow-lg);
      padding: var(--space-xl) var(--space-lg);
      transform: translateX(100%);
      transition: transform var(--transition-base);
      overflow-y: auto;
      flex-direction: column;
      align-items: stretch;
    }
    
    .primary-nav[data-visible="true"] {
      transform: translateX(0);
    }
    
    .nav-list {
      flex-direction: column;
      align-items: stretch;
      gap: var(--space-sm);
      margin-bottom: var(--space-lg);
    }
    
    .nav-link {
      padding: var(--space-md);
    }
    
    .nav-link::after {
      display: none;
    }
    
    .color-mode-switch {
      border-left: none;
      border-top: 2px solid rgba(255, 255, 255, 0.2);
      padding-left: 0;
      padding-top: var(--space-lg);
      width: 100%;
    }
  }
</style>

<script>
  // Scroll detection for header background
  const header = document.getElementById('main-header');
  const handleScroll = () => {
    if (window.scrollY > 50) {
      header?.classList.add('scrolled');
    } else {
      header?.classList.remove('scrolled');
    }
  };
  
  window.addEventListener('scroll', handleScroll);
  
  // Mobile navigation toggle
  const toggle = document.getElementById('nav-toggle');
  const nav = document.getElementById('primary-nav');
  
  if (toggle && nav) {
    toggle.addEventListener('click', () => {
      const isExpanded = toggle.getAttribute('aria-expanded') === 'true';
      toggle.setAttribute('aria-expanded', String(!isExpanded));
      nav.setAttribute('data-visible', String(!isExpanded));
    });
    
    // Close menu when clicking outside
    document.addEventListener('click', (e) => {
      const target = e.target as HTMLElement;
      if (!nav.contains(target) && !toggle.contains(target)) {
        toggle.setAttribute('aria-expanded', 'false');
        nav.setAttribute('data-visible', 'false');
      }
    });
    
    // Close menu on escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        toggle.setAttribute('aria-expanded', 'false');
        nav.setAttribute('data-visible', 'false');
      }
    });
  }
  
  // Color mode switching
  const modeButtons = document.querySelectorAll('.mode-button');
  const body = document.body;
  
  // Load saved color mode
  const savedMode = localStorage.getItem('colorMode') || 'dark';
  setColorMode(savedMode);
  
  modeButtons.forEach(button => {
    button.addEventListener('click', () => {
      const mode = button.getAttribute('data-mode');
      if (mode) {
        setColorMode(mode);
        localStorage.setItem('colorMode', mode);
      }
    });
  });
  
  function setColorMode(mode: string) {
    // Remove all mode classes
    body.classList.remove('light-mode', 'mono-mode');
    
    // Add appropriate class
    if (mode === 'light') {
      body.classList.add('light-mode');
    } else if (mode === 'mono') {
      body.classList.add('mono-mode');
    }
    
    // Update button states
    modeButtons.forEach(btn => {
      if (btn.getAttribute('data-mode') === mode) {
        btn.classList.add('active');
      } else {
        btn.classList.remove('active');
      }
    });
  }
  
  // Active section detection for homepage
  if (window.location.pathname === '/') {
    const sections = ['cover', 'portfolio', 'education', 'projects', 'contact'];
    const navLinks = document.querySelectorAll('.nav-link[data-section]');
    
    const updateActiveSection = () => {
      const scrollPosition = window.scrollY + 200;
      
      for (const sectionId of sections) {
        const section = document.getElementById(sectionId);
        if (section) {
          const sectionTop = section.offsetTop;
          const sectionBottom = sectionTop + section.offsetHeight;
          
          if (scrollPosition >= sectionTop && scrollPosition < sectionBottom) {
            navLinks.forEach(link => {
              const linkSection = link.getAttribute('data-section');
              if (linkSection === sectionId) {
                link.classList.add('nav-link--active');
              } else {
                link.classList.remove('nav-link--active');
              }
            });
            break;
          }
        }
      }
    };
    
    window.addEventListener('scroll', updateActiveSection);
    updateActiveSection();
  }
</script>