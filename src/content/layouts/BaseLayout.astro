---
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import '../styles/astro.global.css';

interface Props {
  title: string;
  author: string;
  publishDate?: string;
  viewCount?: string;
  description: string;
  currentPath?: string;
}

const { title, author, publishDate, viewCount, description, currentPath = '/' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <title>{title}</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  
  <!-- Font Preconnect for Performance -->
  <link rel="preconnect" href="https://fonts.bunny.net">
  <link rel="preconnect" href="https://cdnjs.cloudflare.com">
  
  <!-- Fonts -->
  <link href="https://fonts.bunny.net/css?family=merriweather:400,700" rel="stylesheet">
  
  <!-- Font Awesome (optional - only if using icons) -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
  <Header currentPath={currentPath} />
  
  <slot />
  <section class="publish" style="height: 2rem;">
    <p>Published on {publishDate}</p>
    <p>Published by {author}</p>
    <p>Viewed by {viewCount}</p>
  </section>
  <Footer />
</body>
</html>